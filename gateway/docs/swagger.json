{
    "swagger": "2.0",
    "info": {
        "description": "Web Calculator Gateway Service API",
        "title": "Web Calculator API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api/v1",
    "paths": {
        "/calculate": {
            "post": {
                "description": "Evaluates a mathematical expression and returns the result",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Orchestrator"
                ],
                "summary": "Calculate mathematical expression",
                "parameters": [
                    {
                        "description": "Expression to calculate",
                        "name": "expression",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/schemas.CalculateRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/schemas.CalculateResponse"
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "schema": {
                            "$ref": "#/definitions/schemas.CannotParseExpression"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/schemas.InternalServerError"
                        }
                    }
                }
            }
        },
        "/expressions": {
            "get": {
                "description": "Returns a list of all calculated expressions",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Orchestrator"
                ],
                "summary": "Get all expressions",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/schemas.ExpressionsResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/schemas.InternalServerError"
                        }
                    }
                }
            }
        },
        "/expressions/{id}": {
            "get": {
                "description": "Returns a specific expression by its ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Orchestrator"
                ],
                "summary": "Get expression by ID",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Expression ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/schemas.ExpressionByIdResponse"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/schemas.ExpressionNotFound"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/schemas.InternalServerError"
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "description": "Authenticates a user by login and password. Write access and refresh tokens to cookies.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Login user",
                "parameters": [
                    {
                        "description": "Login credentials",
                        "name": "login",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/schemas.LoginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Empty password",
                        "schema": {
                            "$ref": "#/definitions/schemas.EmptyPassword"
                        }
                    },
                    "401": {
                        "description": "Wrong credentials",
                        "schema": {
                            "$ref": "#/definitions/schemas.WrongCredentials"
                        }
                    },
                    "422": {
                        "description": "Cannot parse request",
                        "schema": {
                            "$ref": "#/definitions/schemas.CannotParseRequest"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/schemas.InternalServerError"
                        }
                    }
                }
            }
        },
        "/refresh": {
            "post": {
                "description": "Refreshes access and refresh tokens using the refresh token from the cookie. Returns new tokens in cookies.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Refresh access and refresh tokens",
                "responses": {
                    "204": {
                        "description": "Success generating new tokens"
                    },
                    "401": {
                        "description": "Token expired or invalid",
                        "schema": {
                            "$ref": "#/definitions/schemas.TokenExpiredOrInvalid"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/schemas.InternalServerError"
                        }
                    }
                }
            }
        },
        "/register": {
            "post": {
                "description": "Registers a new user with login and password. Returns user ID in response body.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Register new user",
                "parameters": [
                    {
                        "description": "Register credentials",
                        "name": "register",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/schemas.RegisterRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/schemas.RegisterResponse"
                        }
                    },
                    "400": {
                        "description": "Empty password\"// @Failure 409 {object} schemas.MessageResponse \"User already exists",
                        "schema": {
                            "$ref": "#/definitions/schemas.EmptyPassword"
                        }
                    },
                    "401": {
                        "description": "Wrong credentials",
                        "schema": {
                            "$ref": "#/definitions/schemas.WrongCredentials"
                        }
                    },
                    "422": {
                        "description": "Cannot parse request",
                        "schema": {
                            "$ref": "#/definitions/schemas.CannotParseRequest"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/schemas.InternalServerError"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "schemas.CalculateRequest": {
            "type": "object",
            "properties": {
                "expression": {
                    "type": "string",
                    "example": "40+2"
                }
            }
        },
        "schemas.CalculateResponse": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "example": 1
                }
            }
        },
        "schemas.CannotParseExpression": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "cannot parse expression"
                }
            }
        },
        "schemas.CannotParseRequest": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "cannot parse expression"
                }
            }
        },
        "schemas.EmptyLogin": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "empty login"
                }
            }
        },
        "schemas.EmptyPassword": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "empty password"
                }
            }
        },
        "schemas.Expression": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "result": {
                    "type": "number",
                    "example": 42
                },
                "status": {
                    "type": "string",
                    "example": "done"
                }
            }
        },
        "schemas.ExpressionByIdResponse": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "result": {
                    "type": "number",
                    "example": 42
                },
                "status": {
                    "type": "string",
                    "example": "done"
                }
            }
        },
        "schemas.ExpressionNotFound": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "expression not found"
                }
            }
        },
        "schemas.ExpressionsResponse": {
            "type": "object",
            "properties": {
                "expressions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/schemas.Expression"
                    }
                }
            }
        },
        "schemas.InternalServerError": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "internal server error"
                }
            }
        },
        "schemas.LoginRequest": {
            "type": "object",
            "properties": {
                "login": {
                    "type": "string",
                    "example": "qwerty"
                },
                "password": {
                    "type": "string",
                    "example": "qwerty123"
                }
            }
        },
        "schemas.RegisterRequest": {
            "type": "object",
            "properties": {
                "login": {
                    "type": "string",
                    "example": "qwerty"
                },
                "password": {
                    "type": "string",
                    "example": "qwerty123"
                }
            }
        },
        "schemas.RegisterResponse": {
            "type": "object",
            "properties": {
                "user_id": {
                    "type": "string",
                    "example": "0196cb7d-7d60-78cc-ac28-f9e114de51fc"
                }
            }
        },
        "schemas.TokenExpired": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "token expired"
                }
            }
        },
        "schemas.TokenExpiredOrInvalid": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "token expired or invalid"
                }
            }
        },
        "schemas.WrongCredentials": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "wrong credentials, user not found"
                }
            }
        }
    }
}